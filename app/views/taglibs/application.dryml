      <td class="go"   ><show-card-inline /></td>
      <td class="theme"><editor:theme     /></td>
      <if test="&false">
        <td class="access"><editor:access     /></td>
      </if>
      <td class="reveal"><reveal-aspect-or-item which="items" with="&this"/></td>
